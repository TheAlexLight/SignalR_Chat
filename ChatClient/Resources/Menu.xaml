<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodels="clr-namespace:ChatClient.ViewModels"
                    xmlns:converters="clr-namespace:ChatClient.Converters">

    <converters:DurationTimeConverter x:Key="durationTimeConverter"/>

    <Style x:Key="banMenuItem" TargetType="{x:Type MenuItem}">
        <Setter Property="Command" Value="{Binding BanUserCommand}"/>
        <Setter Property="CommandParameter">
            <Setter.Value>
                <MultiBinding Converter="{StaticResource durationTimeConverter}">
                    <Binding ElementName="activeUsersListBox" Path="SelectedItem"/>
                    <Binding Mode="TwoWay" 
                                                 Path="(viewmodels:ChatViewModel.DurationTime)"
                                                 RelativeSource="{RelativeSource Self}"/>
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>