        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Border CornerRadius="25" 
                                    Background="CornflowerBlue" 
                                    Width="30" 
                                    Height="30"/>
                        <StackPanel>
                            <TextBlock Text="{Binding Username}"
                                       Foreground="{Binding UsernameColor}"
                                       Margin="10,0,10,0"
                                       FontSize="22"/>
                            <TextBlock Text="{Binding StatusMessage}"
                                   Margin="10,-5,10,0"
                                       FontStyle="Italic"
                                       Foreground="#5F5C5A"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>