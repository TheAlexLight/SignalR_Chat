<UserControl x:Class="ChatClient.MVVM.Views.AdditionalViews.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient.MVVM.Views.AdditionalViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <PasswordBox x:Name="passwordBox" 
                 PasswordChanged="PasswordBox_PasswordChanged" BorderThickness="0"
                 MaxLength="20">
    </PasswordBox>
</UserControl>