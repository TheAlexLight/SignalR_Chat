<UserControl x:Class="ChatClient.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient.Views" 
             xmlns:viewmodels="clr-namespace:ChatClient.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ChatViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="550">

    <Grid Background="#C0C8D5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"> 
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="4*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Style="{StaticResource chatBorder}"
                    Grid.Row="0">
                <TextBlock Style="{StaticResource chatTitle}"
                           Text="Chat"/>
            </Border>

            <Grid Grid.Row="1">
                <ListBox Style="{StaticResource messagesListBox}"/>
            </Grid>

            <Grid Grid.Row="2"
                  Background="{StaticResource typeMessageGridColors}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"    
                     Style="{StaticResource typeMessage}"
                     Text="{Binding Message}"/>
                <Button Grid.Column="1"
                        Style="{StaticResource sendMessage}"
                        Command="{Binding SendChatMessageCommand}"/>
            </Grid>
        </Grid>

        <Grid  Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Style="{StaticResource chatBorder}"
                    Grid.Row="0">
                <TextBlock Style="{StaticResource chatTitle}"
                           Text="Users"/>
            </Border>

            <ListBox Grid.Row="1"
                     Style="{StaticResource activeUsers}"/>
        </Grid>

        <Grid Grid.ColumnSpan="3" Style="{StaticResource getBannedLayout}"/>
    </Grid>

</UserControl>
