<UserControl x:Class="ChatClient.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient.Views" 
             xmlns:viewmodels="clr-namespace:ChatClient.ViewModels" 
             xmlns:additionaViews="clr-namespace:ChatClient.Views.AdditionalViews"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converters="clr-namespace:ChatClient.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:ChatViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="550">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:DurationTimeConverter x:Key="durationTimeConverter"/>
            <CollectionViewSource x:Key="ListBoxItems" Source="{Binding Path=Groups, 
                UpdateSourceTrigger=PropertyChanged}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription PropertyName="Name"/>
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#C0C8D5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="164"/>
            <ColumnDefinition  Style="{StaticResource toolBarColumn}"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Style="{StaticResource chatBorder}"
                    Grid.Row="0">
                <TextBlock Style="{StaticResource chatTitle}"
                           Text="Chat"/>
            </Border>

            <ListBox Grid.Row="1"
                Style="{StaticResource messagesListBox}"/>

            <Grid Grid.Row="2"
                  Background="{StaticResource typeMessageGridColors}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3.7*"/>
                    <ColumnDefinition MinWidth="60" MaxWidth="60"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"    
                     Style="{StaticResource typeMessage}"
                     Text="{Binding Message}"/>
                <Button  Margin="0,0,10,0" Grid.Column="1" Width="50" Height="45"  
                        Command="{Binding SendChatMessageCommand}"
                        Style="{StaticResource sendImageMessage}">
                    <Image Stretch="Fill" Source="{StaticResource directDrawingImage}" />
                </Button>
            </Grid>
        </Grid>

        <Border  Grid.Column="1" 
                 BorderThickness="1,0,1,0"
                 BorderBrush="#AAAEB2">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Style="{StaticResource chatBorder}"
                    Grid.Row="0">
                    <TextBlock Style="{StaticResource chatTitle}"
                           Text="Users"/>
                </Border>

                <Grid Grid.Row="1" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ToolBarTray IsLocked="True"
                                 Grid.Row="0"
                                 Background="White"
                                 HorizontalAlignment="Right">
                        <ToolBar ToolBar.OverflowMode="Never"
                                 Name="UsersToolBar">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Loaded">
                                    <i:InvokeCommandAction Command="{Binding RemoveToolBarOverflowCommand}"
                                                   CommandParameter="{Binding ElementName=UsersToolBar}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <Menu>
                                <MenuItem ItemsSource="{Binding Source={StaticResource ListBoxItems}}"
                                          HorizontalAlignment="Right"
                                          Background="White">
                                    <MenuItem.Header>
                                        <Image Source="{StaticResource filterDrawingImage}"
                                               Width="20"
                                               Height="20"/>
                                    </MenuItem.Header>
                                    <MenuItem.ItemTemplate>
                                        <HierarchicalDataTemplate>
                                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}"/>
                                        </HierarchicalDataTemplate>
                                    </MenuItem.ItemTemplate>
                                </MenuItem>
                            </Menu>
                        </ToolBar>
                    </ToolBarTray>
                    <!--<ListBox ItemsSource="{Binding Source={StaticResource ListBoxItems}}" >
                        <ListBox.ItemTemplate>
                            <HierarchicalDataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}"/>
                            </HierarchicalDataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>-->
                    <ListBox Grid.Row="1" x:Name="activeUsersListBox"
                     ItemsSource="{Binding Source={StaticResource ListBoxItems}}"
                             BorderThickness="0">
                        <ListBox.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.Panel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel Orientation="Vertical"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"/>
                                    </ItemsPanelTemplate>
                                </GroupStyle.Panel>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <Expander
                                                        x:Name="expander"
                                        Padding="0"                                           
                                        BorderThickness="0"
                                        IsExpanded="True"
                                            HorizontalContentAlignment="Stretch"
                                            HorizontalAlignment="Stretch">
                                                        <ItemsPresenter/>
                                                        <Expander.Header>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Name}"/>
                                                                <TextBlock Text="  ("/>
                                                                <TextBlock Text="{Binding Items[0].UsersCount}"/>
                                                                <TextBlock Text=")"/>
                                                            </StackPanel>
                                                        </Expander.Header>
                                                    </Expander>
                                                    <ControlTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding Items[0].IsChecked}" Value="False">
                                                            <Setter TargetName="expander" Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </ListBox.GroupStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ListBox ItemsSource="{Binding GroupedUsers}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock x:Name="usernameTextBlock" 
                                                       Text="{Binding UserProfile.Username, Mode=TwoWay}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem }">
                                <Style.Triggers>
                                    <DataTrigger Binding ="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListBox}}, Path=HasItems}" 
                                                    Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.ColumnSpan="3" Style="{StaticResource getBannedLayout}"/>

        <Grid Grid.Column="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ToolBarTray Grid.Column="2" Grid.Row="1" 
                     Orientation="Vertical"
                         IsLocked="True"
                         Background="{StaticResource mainMessageBoxColors}">
                <ToolBar FontSize="20" 
                         ToolBar.OverflowMode="Never"
                         Name="toolBar">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Loaded">
                            <i:InvokeCommandAction Command="{Binding RemoveToolBarOverflowCommand}"
                                                   CommandParameter="{Binding ElementName=toolBar}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Menu Style="{StaticResource banMenu}">
                        <MenuItem Header="Ban">
                            <MenuItem Header="10 min" 
                                      viewmodels:ChatViewModel.DurationTime="10"
                                      Style="{StaticResource banMenuItem}">
                            </MenuItem>
                            <MenuItem Header="20 min" 
                                      viewmodels:ChatViewModel.DurationTime="20"
                                      Style="{StaticResource banMenuItem}"/>
                            <MenuItem Header="30 min" 
                                      viewmodels:ChatViewModel.DurationTime="30"
                                      Style="{StaticResource banMenuItem}"/>
                            <MenuItem Header="60 min" 
                                      viewmodels:ChatViewModel.DurationTime="60"
                                      Style="{StaticResource banMenuItem}"/>
                            <MenuItem Header="Permanent"
                                      viewmodels:ChatViewModel.DurationTime="Permanent"
                                      Style="{StaticResource banMenuItem}"/>
                        </MenuItem>
                    </Menu>
                    <Button Style="{StaticResource toolBarButton}"
                            Content="Kick"
                            Command="{Binding KickUserCommand}"
                            CommandParameter="{Binding ElementName=activeUsersListBox,Path=SelectedItem}"/>
                    <Menu Style="{StaticResource banMenu}">
                        <MenuItem Header="Mute">
                            <MenuItem Header="10 min" 
                                      viewmodels:ChatViewModel.DurationTime="10"
                                      Style="{StaticResource muteMenuItem}">
                            </MenuItem>
                            <MenuItem Header="20 min" 
                                      viewmodels:ChatViewModel.DurationTime="20"
                                      Style="{StaticResource muteMenuItem}"/>
                            <MenuItem Header="30 min" 
                                      viewmodels:ChatViewModel.DurationTime="30"
                                      Style="{StaticResource muteMenuItem}"/>
                            <MenuItem Header="60 min" 
                                      viewmodels:ChatViewModel.DurationTime="60"
                                      Style="{StaticResource banMenuItem}"/>
                            <MenuItem Header="Permanent"
                                      viewmodels:ChatViewModel.DurationTime="Permanent"
                                      Style="{StaticResource banMenuItem}"/>
                        </MenuItem>
                    </Menu>
                </ToolBar>
            </ToolBarTray>
        </Grid>

        <additionaViews:ConnectionLostView Grid.ColumnSpan="3"/>
    </Grid>
</UserControl>
