<UserControl x:Class="ChatClient.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#C0C8D5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Border Grid.ColumnSpan="2"
                BorderBrush="Green"
                BorderThickness="0,0,0,0"
                CornerRadius="5">
            <Grid Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="3.5*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--<TextBlock Grid.Row="0"
                       Style="{StaticResource errorMessage}"
                       Text="{Binding ErrorMessage}"/>-->

                <Border BorderBrush="#7B828E"
                    BorderThickness="1,1,0.5,1"
                        CornerRadius="5,0,0,5">
                    <Grid Grid.Row="0" Grid.ColumnSpan="2">
                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="Chat"
                       Margin="10"
                       FontSize="40"
                           TextAlignment="Center"
                       VerticalAlignment="Center"/>
                    </Grid>
                </Border>



                <ListBox Grid.Row="1" Grid.RowSpan="2" 

                     ItemsSource="{Binding Messages}"/>

                <Grid Grid.Row="3" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                     Style="{StaticResource typeMessage}"
                     Text="{Binding Message}"/>
                    <Button Grid.Column="1"
                        Style="{StaticResource sendMessage}"
                        Command="{Binding SendChatMessageCommand}"/>
                </Grid>
            </Grid>
        </Border>
        

        <Grid  Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="5.5*"/>
            </Grid.RowDefinitions>
            
            <Border BorderThickness="0.5,1,1,1"
                    BorderBrush="#7B828E"
                    CornerRadius="0,5,5,0">
                <TextBlock Grid.Row="0"
                       Text="Users"
                       FontSize="40"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
            
            <ListBox Grid.Row="1"  Style="{StaticResource activeUsers}"/>
        </Grid>
        

        <Grid Grid.ColumnSpan="3" Style="{StaticResource getBannedLayout}"/>
    </Grid>
</UserControl>
