<UserControl x:Class="ChatClient.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient.Views" 
             xmlns:viewmodels="clr-namespace:ChatClient.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ChatViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#C0C8D5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"> 
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="3.5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Style="{StaticResource chatBorder}" >
                <TextBlock Grid.Row="0"
                       Text="Chat"
                       Style="{StaticResource chatTitle}"/>
            </Border>

            <ListBox Grid.Row="1" Grid.RowSpan="2" 
                     ItemsSource="{Binding Messages}"/>

            <Grid Grid.Row="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                     Style="{StaticResource typeMessage}"
                     Text="{Binding Message}"/>
                <Button Grid.Column="1"
                        Style="{StaticResource sendMessage}"
                        Command="{Binding SendChatMessageCommand}"/>
            </Grid>
        </Grid>

        <Grid  Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Style="{StaticResource chatBorder}"
                    BorderThickness="0.5,1,1,1"
                    CornerRadius="0,5,5,0">
                <TextBlock Grid.Row="0"
                       Text="Users"
                       FontSize="40"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <ListBox Grid.Row="1"  Style="{StaticResource activeUsers}"/>
        </Grid>

        <Grid Grid.ColumnSpan="3" Style="{StaticResource getBannedLayout}"/>
    </Grid>

</UserControl>
